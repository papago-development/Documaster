@using Documaster.Model.Entities
@model Project

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.js"></script>
<link href="~/Content/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Adauga proiect</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Name, "Nume client")
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Nume proiect")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Expire, "Expira pe")
            @Html.TextBoxFor(m => m.Expire, new { @class = "form-control", id = "expire-textbox" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adauga" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi la lista", "Index")
</div>

<script>
    $(document).ready(function () {
        var dateInput = $("#expire-textbox");
        dateInput.datepicker({
            todayHighlight: true,
            todayBtn: "linked",
            //format: "m/dd/yyyy"
        });
        var value = dateInput.attr("value");
        if (value !== "") {
            var date = new Date(value);
            dateInput.attr("value", date.toLocaleDateString());
        }
    });
</script>