@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgPath = Directory.GetFiles(Server.MapPath("~/Images"), "*.*").FirstOrDefault();
}

@if (imgPath != null)
{
    <img src="@Url.Content(String.Format("~/Images/{0}", new FileInfo(imgPath).Name))" width="1100px;" height="350px;"/>
}
