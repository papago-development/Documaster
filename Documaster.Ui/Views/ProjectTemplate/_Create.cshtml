@using Documaster.Model.Entities
@model Documaster.Model.Entities.ProjectTemplate

@{
    var projectId = ViewBag.ProjectId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="modal-dialog" id="createModal">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                X
            </button>
            <h4 class="modal-title">Creare document</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.ProjectId)
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Nume", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, "Sablon", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("TemplateId", new SelectList(ViewBag.Templates, "Id", "Name"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">

                            <input type="submit" value="Salveaza" class="btn btn-default" id="closeModal" />

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.modal-dialog').change(

        function() {
            $.validator.unobtrusive.parse("#createForm");
        });
</script>
