@using Documaster.Business.Models
@model Documaster.Model.Entities.Requirement
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //TODO: extact list of categories from viewbag and convert to list of select item
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="displayContent">
    <h2>Creeaza cerinta</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Number, "Numar", htmlAttributes: new { @class = "control-label col-sm-1" })
                <div class="col-sm-11">
                    @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Cerinta", htmlAttributes: new { @class = "control-label col-sm-1" })
                <div class="col-sm-11">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            @*insert dropdown *@

            <div class="form-group">
                @Html.LabelFor(model => model.Category.Name, "Categorii", htmlAttributes: new { @class = "control-label col-sm-1" })
                <div class="col-sm-11">
                    @*@Html.LabelFor(model => model.CategoryId)*@
                    @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "Id", "Name", "Select Project Type")
                      , new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-md-11">
                    <input type="submit" value="Adauga" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Inapoi", "Index")
    </div>

</div>