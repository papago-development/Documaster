@using Documaster.Model.Entities
@model  ProjectStatus
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
<script src="~/Scripts/jscolor.js"></script>
<div class="displayContent">
    <h2>Adauga stare proiect</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Nume", new { @class = "control-label col-sm-1" })
                <div class="col-sm-11">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Color, "Culoare", htmlAttributes: new { @class = "control-label col-sm-1" })
                <div class="col-sm-11">
                    @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control jscolor" } })
                    @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-md-11">
                    <input type="submit" value="Adauga" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Inapoi la lista", "Index")
    </div>
</div>