@model IEnumerable<Documaster.Model.Entities.Category>

@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categorii</h2>
<p>
    @Html.ActionLink("Adauga", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Numar
        </th>
        <th>
            Nume
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Number)
            </td>
            <td>
                @Html.DisplayFor(x => item.Name)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Sterge", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
